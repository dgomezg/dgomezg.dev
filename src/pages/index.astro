---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const experience = await getCollection('experience');
// Sort by start date descending
const sortedExperience = experience.sort((a, b) => new Date(b.data.startDate).valueOf() - new Date(a.data.startDate).valueOf());

// Filter current roles
const currentRoles = sortedExperience.filter(job => job.data.current);
// Limit previous roles on home page to keep it clean, maybe just the last 3-4? 
// Or show all but styled differently. Let's keep all but style them as requested.
const previousRoles = sortedExperience.filter(job => !job.data.current);
---

<Layout title="David Gomez G. - Staff Software Engineer & Developer Advocate">
	<div class="relative bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
                        <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left flex flex-col justify-center">
                            <div class="flex justify-center lg:justify-start mb-8">
                                <div class="relative w-48 h-48 rounded-full overflow-hidden border-4 border-indigo-200 shadow-lg">
                                    <img src="/profile.jpg" alt="David Gomez G." class="w-full h-full object-cover" />
                                </div>
                            </div>
                            <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                                <span class="block xl:inline">David Gomez G.</span>
                                <span class="block text-indigo-600">Staff Software Engineer</span>
                            </h1>
                            <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                                Java Champion | Developer Advocate | Software Engineer.
                                Passionate about distributed systems, Event Sourcing, and building modular software.
                            </p>
                            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                                <div class="rounded-md shadow">
                                    <a href="/experience" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                                        View Experience
                                    </a>
                                </div>
                                <div class="mt-3 sm:mt-0 sm:ml-3">
                                    <a href="/talks" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10">
                                        See Talks
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:flex-col lg:items-center lg:justify-center">
                             <div class="w-full max-w-md space-y-12">
                                <div>
                                    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center lg:text-left flex items-center">
                                        <span class="bg-indigo-100 text-indigo-600 p-2 rounded-lg mr-3">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                                        </span>
                                        Current Roles
                                    </h2>
                                    <ul class="space-y-4">
                                        {currentRoles.map((role) => (
                                            <li class="bg-white p-5 rounded-xl shadow-md border border-indigo-100 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                                                <div class="flex justify-between items-start">
                                                    <div>
                                                        <div class="font-bold text-lg text-gray-900">{role.data.title}</div>
                                                        <div class="text-indigo-600 font-medium">{role.data.company}</div>
                                                    </div>
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        Present
                                                    </span>
                                                </div>
                                                <div class="text-sm text-gray-500 mt-2 flex items-center">
                                                    <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                                    Since {role.data.startDate}
                                                </div>
                                            </li>
                                        ))}
                                        <li>
                                            <div class="bg-gradient-to-r from-yellow-50 to-white p-5 rounded-xl shadow-md border border-yellow-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                                                <div class="flex items-center space-x-3">
                                                     <div class="flex-shrink-0">
                                                        <img src="https://www.javaspecialists.eu/skin/skin4/images/profiles/java-champions-logo.png" alt="Java Champions Logo" class="h-10 w-auto" />
                                                    </div>
                                                    <div>
                                                        <div class="font-bold text-gray-900">Java Champion</div>
                                                        <div class="text-sm text-gray-500">Since 2020</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>

                                <div class="pt-8 border-t border-gray-100">
                                    <h2 class="text-xl font-bold text-gray-500 mb-6 text-center lg:text-left flex items-center uppercase tracking-wider text-sm">
                                        <span class="mr-2">Past Experience</span>
                                        <span class="flex-grow h-px bg-gray-200"></span>
                                    </h2>
                                    <div class="relative pl-4 border-l-2 border-gray-200 space-y-8">
                                        {previousRoles.map((role) => (
                                            <div class="relative">
                                                <div class="absolute -left-[22px] bg-white border-2 border-indigo-200 rounded-full w-3.5 h-3.5 mt-2"></div>
                                                <div class="mb-1">
                                                    <h3 class="font-semibold text-gray-800 text-lg leading-tight">{role.data.title}</h3>
                                                    <p class="text-gray-600 text-base">{role.data.company}</p>
                                                </div>
                                                <p class="text-sm text-gray-400 font-mono">
                                                    {role.data.startDate} - {role.data.endDate}
                                                </p>
                                            </div>
                                        ))}
                                    </div>
                                    <div class="mt-8 text-center lg:text-left">
                                         <a href="/experience" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm inline-flex items-center group">
                                            View Full Resume
                                            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                        </a>
                                    </div>
                                </div>
                             </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</Layout>
