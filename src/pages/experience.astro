---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const experience = await getCollection('experience');
// Sort by start date descending
const sortedExperience = experience.sort((a, b) => new Date(b.data.startDate).valueOf() - new Date(a.data.startDate).valueOf());
---

<Layout title="Professional Experience - David Gomez G.">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Professional Experience</h1>
        <div class="space-y-8">
            {sortedExperience.map((job) => (
                <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                    <div class="px-4 py-5 sm:px-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">{job.data.title}</h3>
                        <p class="mt-1 max-w-2xl text-sm text-gray-500">{job.data.company} | {job.data.location}</p>
                    </div>
                    <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                        <dl class="sm:divide-y sm:divide-gray-200">
                            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Duration</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                    {job.data.startDate} - {job.data.current ? 'Present' : job.data.endDate}
                                </dd>
                            </div>
                            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                                <dt class="text-sm font-medium text-gray-500">Description</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                    {job.body}
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>
