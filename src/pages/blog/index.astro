---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Featured post is the most recent one
const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);
---

<Layout title="Blog - David Gomez G.">
    <!-- Header with Background Image -->
    <div class="relative bg-gray-900 mb-12 overflow-hidden h-96">
        <div class="absolute inset-0">
             <img class="w-full h-full object-cover object-[0%_80%] opacity-80" src="/talks-header-1.jpg" alt="Blog Header" />
            <div class="absolute inset-0 bg-gray-900 mix-blend-multiply opacity-50" aria-hidden="true"></div>
        </div>
        <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8 text-center h-full flex flex-col justify-center">
            <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Blog</h1>
            <p class="mt-6 text-xl text-indigo-100 max-w-3xl mx-auto">
                Thoughts on software engineering, developer advocacy, and more.
            </p>
        </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 py-8">
        
        {/* Featured Post */}
        {featuredPost && (
            <div class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Latest Post</h2>
                <div class="relative rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300 bg-white">
                    <div class="md:flex">
                        <div class="md:w-1/2 bg-indigo-50 flex items-center justify-center p-8">
                            <span class="text-indigo-200 text-9xl font-bold opacity-20 select-none uppercase">
                                {featuredPost.data.language}
                            </span>
                        </div>
                        <div class="md:w-1/2 p-8 flex flex-col justify-between">
                            <div>
                                <div class="flex items-center space-x-2 mb-4">
                                    <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${featuredPost.data.language === 'en' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'}`}>
                                        {featuredPost.data.language === 'en' ? 'English' : 'Español'}
                                    </span>
                                     <time datetime={featuredPost.data.date.toISOString()} class="text-sm text-gray-500">
                                        {featuredPost.data.date.toLocaleDateString(undefined, {
                                            year: 'numeric',
                                            month: 'long',
                                            day: 'numeric'
                                        })}
                                    </time>
                                </div>
                                <h3 class="text-3xl font-extrabold text-gray-900 mb-4">
                                    <a href={`/blog/${featuredPost.slug}`} class="hover:text-indigo-600 transition-colors">
                                        {featuredPost.data.title}
                                    </a>
                                </h3>
                                <p class="text-gray-600 text-lg mb-6 line-clamp-3">
                                    {featuredPost.data.summary}
                                </p>
                            </div>
                            
                            <div class="flex items-center justify-between mt-4">
                                <a href={`/blog/${featuredPost.slug}`} class="text-indigo-600 font-semibold hover:text-indigo-800 flex items-center group">
                                    Read Article 
                                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                                </a>
                                {featuredPost.data.tags && (
                                    <div class="flex space-x-2">
                                        {featuredPost.data.tags.slice(0, 3).map((tag) => (
                                            <span class="text-xs font-medium text-gray-500">#{tag}</span>
                                        ))}
                                    </div>
                                )}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        )}

        {/* Other Posts Grid */}
        {otherPosts.length > 0 && (
            <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-8">Recent Articles</h2>
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {otherPosts.map((post) => (
                        <div class="flex flex-col bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                            <div class="flex-1 p-6 flex flex-col justify-between">
                                <div>
                                    <div class="flex justify-between items-center mb-4">
                                        <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${post.data.language === 'en' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'}`}>
                                            {post.data.language === 'en' ? 'English' : 'Español'}
                                        </span>
                                        <time datetime={post.data.date.toISOString()} class="text-xs text-gray-500">
                                            {post.data.date.toLocaleDateString(undefined, {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            })}
                                        </time>
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-3">
                                        <a href={`/blog/${post.slug}`} class="hover:text-indigo-600 transition-colors">
                                            {post.data.title}
                                        </a>
                                    </h3>
                                    <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                                        {post.data.summary}
                                    </p>
                                </div>
                                <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
                                    <a href={`/blog/${post.slug}`} class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                        Read more
                                    </a>
                                     {post.data.tags && (
                                        <div class="flex space-x-2">
                                            {post.data.tags.slice(0, 2).map((tag) => (
                                                <span class="text-xs text-gray-400">#{tag}</span>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        )}
    </div>
</Layout>
